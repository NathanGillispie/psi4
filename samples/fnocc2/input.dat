#! Test G2 method for H2O
molecule h2o {
0 1
O
H 1 1.0 
H 1 1.0 2 104.5
}
set {
    e_convergence 1e-10
    d_convergence 1e-10
    r_convergence 1e-10
    g_convergence gau_verytight
}

if psi4.core.get_option("scf", "orbital_optimizer_package") != "INTERNAL":
    psi4.set_options({"e_convergence": 9, "d_convergence": 5e-8})

energy('g2')


clean()
